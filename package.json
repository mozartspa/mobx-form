{
  "version": "0.6.0-0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mozartspa/mobx-form.git"
  },
  "homepage": "https://mozartspa.github.io/mobx-form/",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint && tsc --noEmit",
    "format": "prettier --write '**/*'",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {
    "mobx": ">=5",
    "mobx-react-lite": ">=2",
    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "name": "@mozartspa/mobx-form",
  "description": "High performance, hook-based forms library for React powered by MobX",
  "keywords": [
    "mobx-form",
    "form",
    "forms",
    "react",
    "mobx",
    "hooks",
    "react hooks",
    "validation",
    "high performance"
  ],
  "author": "Filippo Dossena",
  "module": "dist/mobx-form.esm.js",
  "size-limit": [
    {
      "path": "dist/mobx-form.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/mobx-form.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.11.0",
    "@testing-library/react": "^11.2.7",
    "@types/debounce-promise": "^3.1.3",
    "@types/dlv": "^1.1.2",
    "@types/react": "^17.0.9",
    "@types/react-dom": "^17.0.6",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "jest-fail-on-console": "^2.0.4",
    "mobx": "^6.3.2",
    "mobx-react-lite": "^3.2.0",
    "prettier": "^2.3.1",
    "prettier-plugin-organize-imports": "^2.1.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "size-limit": "^4.11.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.2.0",
    "typescript": "^4.3.2",
    "wait-for-expect": "^3.0.2"
  },
  "dependencies": {
    "debounce-promise": "^3.1.2",
    "dlv": "^1.1.3",
    "react-fast-compare": "^3.2.0"
  },
  "resolutions": {
    "typescript": "^4.3.2",
    "ts-jest": "^26.5.6",
    "jest": "^26.6.3",
    "@typescript-eslint/eslint-plugin": "^4.27.0",
    "@typescript-eslint/parser": "^4.27.0"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/test/setupTests.ts"
    ]
  }
}
